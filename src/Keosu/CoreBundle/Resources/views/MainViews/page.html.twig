{% extends 'KeosuCoreBundle::page.html.twig' %}

{% block body %}
	<div id="checklayout">
		<script type="text/javascript" charset="utf-8">
			$(document).ready(function() {
				$.get('{{path('keosu_core_views_page_check') }}', function(data) {
					$('#checklayout').html(data);
				});
			} );
		</script>
	</div>
	<div id="content">
		<div class="panel">
			{% block content %}
				<div class="dashboard">
					<div class="row">
						<div class="col-md-12">
							<h2><span class="glyphicon glyphicon-book icon-menu"></span> Pages</h2>
							<p>
								{% trans %}The page part is about your application page, articles, readers data, etc...{% endtrans %}
							</p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-3">
							<div class="wellcustom">
								<h3><span class="glyphicon glyphicon-file icon-menu"></span>{% trans %}Manage pages{% endtrans %}</h3>
								<p>
									{% trans %}A page is a page, no matter about content for instance, it's only a way to display something (but have an idea of what you want to display){% endtrans %}
								</p>
								<a href="{{ path('keosu_core_views_page_manage') }}" ><button type="button" class="btn btn-default">{% trans %}Manage pages{% endtrans %} </button></a>
							</div>
						</div>
						{% for page in pages %}
							<div class="col-md-3">
								<div class="wellcustom">
									<h3><span class="glyphicon glyphicon-edit icon-menu"></span>{{ page.name }}</h3>

									<a href="{{ path('keosu_core_views_page',{'id':page.id}) }}"><button type="button" class="btn btn-default">{% trans %}Edit{% endtrans %} {{ page.name }}</button></a>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			{% endblock %}
		</div>
	</div>
{% endblock %}
